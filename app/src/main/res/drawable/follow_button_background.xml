<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the btnNextSecondCerbung is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- When the btnNextSecondCerbung is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_secondary" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state, when the btnNextSecondCerbung is not pressed or focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_onPrimary" />
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_light_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>